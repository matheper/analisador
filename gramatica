s -> 
	Algoritmo NOMEALGORITMO
	VAR
	Inicio
	LISTACOMANDOS
	fimalgoritmo

NOMEALGORITMO ->
	string | {}	

VAR -> var DECLARACAOVARIAVEIS | funcao FUNCAO | procedimento PROCEDIMENTO | {}
	
DECLARACAOVARIAVEIS ->
	LISTADECLARACAO DECLARACAOVARIAVEIS | {}

LISTADECLARACAO ->
	 identificador LISTAIDENTIFICADORES : TIPOVARIAVEL

LISTAIDENTIFICADORES -> ,identificador LISTAIDENTIFICADORES | {}

TIPOVARIAVEL ->
	VARIAVELSIMPLES | vetor[inteiro..inteiro MATRIZ] de VARIAVELSIMPLES

MATRIZ ->
	,inteiro..inteiro | {}

VARIAVELSIMPLES->
	inteiro | real | logico | literal
	
TIPORETORNO -> inteiro | real | logico
	
PARAMETROS -> identificador LISTAIDENTIFICADORES:TIPOVARIAVEL LISTAPARAMETROS |
			  var identificador LISTAIDENTIFICADORES:VARIAVELSIMPLES | {}

LISTAPARAMETROS -> 	;PARAMETROS | {}

VARFUNCAOPROC -> var DECLARACAOVARIAVEIS | {}
	
FUNCAO ->
	identificador (PARAMETROS): TIPORETORNO
		VARFUNCAOPROC
		inicio LISTACOMANDOS fimfuncao

PROCEDIMENTO ->
	identificador (PARAMETROS)
		VARFUNCAOPROC
		inicio LISTACOMANDOS fimprocedimento
	



	

	
	
	



	
	
LISTACOMANDOS->
	COMANDO LISTACOMANDOS | {}
	
COMANDO -> 
	ATRIBUICAO | LEITURA | ESCRITA | CONDICIONAL |
	REPETICAO | CHAMADAPROCEDIMENTO

ATRIBUICAO ->
	VARIAVEL <- EXPRESSAO

VARIAVEL -> identificadorVETOR
VETOR -> [INTEIRO MATRIZ] | {}
MATRIZ -> ,INTEIRO | {}
INTEIRO -> constInt | identificador

CONSTANTE -> constInt | constReal | verdadeiro | falso | string
NUMERO -> constInt | constReal

EXPRESSAO ->
	CONSTANTE | VARIAVEL | EXPRESSAOARITMETICA | EXPRESSAOLITERAL |
	EXPRESSAORELACIONAL | EXPRESSAOLOGICA | CHAMADAFUNCAO

	
OPERADORARITMETICO ->
	+ EXPRESSAOARITMETICA| - EXPRESSAOARITMETICA|
	* EXPRESSAOARITMETICA| / EXPRESSAOARITMETICA|
	% EXPRESSAOARITMETICA| \ EXPRESSAOARITMETICA|
	^ EXPRESSAOARITMETICA
	
EXPRESSAOARITMETICA -> 
	OPERANDO OPERADORARITMETICO
	- EXPRESSAOARITMETICA
	(EXPRESSAOARITMETICA)

OPERANDO ->
	VARIAVEL | NUMERO
	
EXPRESSAOLITERAL ->
	STRING CONCATENACAO
CONCATENACAO ->
	+ STRING CONCATENACAO | {}
STRING -> string | identificador

EXPRESSAORELACIONAL ->
	OPERANDORELACIONAL OPERADORRELACIONAL OPERANDORELACIONAL
	
OPERANDORELACIONAL ->
	VARIAVEL | CONSTANTE | 
	
OPERADORRELACIONAL ->
	igual | diferente | maior | menor | maiorIgual | menorIgual

EXPRESSAOLOGICA ->
	EXPRESSAORELACIONAL OPERADORLOGICO EXPRESSAORELACIONAL
	
OPERADORLOGICO ->
	e | ou

********LISTAEXPRESSAO -> EXPRESSAO LISTAEXPRESSAO | {}	
	
EXPRESSAOCHAMADAFUNCAO ->
	identificador(LISTAARGUMENTOS)

LISTAARGUMENTOS ->
	ARGUMENTO LISTAARGUMENTO | {}

ARGUMENTO ->
	identificador | CONSTANTE | EXPRESSAO
	

	
	


	
LEITURA ->
	leia(identificador LISTAIDENTIFICADORES)
	
ESCRITA ->
	escreva(LISTAEXPRESSAO) | escreval(LISTAEXPRESSAO)
	
CONDICIONAL ->
	se EXPRESSAOLOGICA entao LISTACOMANDOS FIMSE

FIMSE -> fimse | senao LISTACOMANDOS fimse

REPETICAO ->
	repita LISTACOMANDOS ate EXPRESSAOLOGICA |
	enquanto EXPRESSAOLOGICA LISTACOMANDOS fimenquanto |
	para identificador de inteiro ate inteiro faca
		LISTACOMANDOS fimpara
